<!-- /sections/index-newsletter.liquid -->

<div class="newsletter {{ section.settings.homepage_bg_color }}" data-section-id="{{ section.id }}" data-section-type="index-blog">
  <div class="wrapper">
    <div class="newsletter__wrapper">
      <div class="newsletter__content">
        {% if section.settings.title != '' %}
          <h2 class="h1 newsletter__title">{{ section.settings.title | escape }}</h4>
        {% endif %}
        {% if section.settings.richtext != blank %}
          <div class="newsletter__text rte rte--index">
            {{ section.settings.richtext }}
          </div>
        {% endif %}
        <div class="newsletter__button">
          {% include 'newsletter-form' %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Newsletter"
    },
    {
      "id": "richtext",
      "type": "richtext",
      "label": "Subheading",
      "default": "<p>Subscribe to get special offers, free giveaways, and once-in-a-lifetime deals.  We promise to send emails you will love.</p>"
    },
    {
      "type": "select",
      "id": "homepage_bg_color",
      "label": "Background color",
      "default": "index--white",
      "options": [
        { "value": "index--white", "label": "White"},
        { "value": "index--gray", "label": "Secondary"}
      ]
    },
    {
      "type": "paragraph",
      "content": "Subscribers are under 'Accepts Marketing' in your [customer admin](/admin/customers).  Sync to Mailchimp with the official [Mailchimp app](https://apps.shopify.com/mailchimp)."
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Promotional"
    }
  ]
}
{% endschema %}
