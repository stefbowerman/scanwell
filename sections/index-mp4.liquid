    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Headline",
      "default": "Video with text overlay"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Subheading",
      "default": "This area is used to describe your videoâ€™s details."
    },
    {
      "type": "select",
