    "name": "Lookbook",
    "settings": [
      {
        "type": "link_list",
        "id": "page_nav",
        "label": "Secondary page navigation",
        "info": "This menu won't show dropdown items"
      },
      {
        "type": "checkbox",
        "id": "show_title",
        "label": "Show page title",
        "default": true
      }
      ],
      "blocks": [
        {
          "type": "overlap",
          "name": "Overlapping images",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title",
              "default": "Collection name"
            },
            {
              "type": "richtext",
              "id": "text",
              "label": "Text",
              "default": "<p>Use this text to describe the collection.</p>"
            },
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
              "type": "image_picker",
              "id": "image2",
              "label": "Second Image"
            },
            {
              "type": "text",
              "id": "button_label",
              "label": "Button label"
            },
            {
              "type": "url",
              "id": "button_link",
              "label": "Button link"
            }
          ]
        },
        {
          "type": "images",
          "name": "Image row",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
              "type": "image_picker",
              "id": "image2",
              "label": "Second Image"
            },
            {
              "type": "image_picker",
              "id": "image3",
              "label": "Third Image"
