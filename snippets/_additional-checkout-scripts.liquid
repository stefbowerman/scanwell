{% if first_time_accessed %}
  <!-- Event snippet for Purchase from Shopify conversion page -->
  <script>
    gtag('event', 'conversion', {
        'send_to': 'AW-774081166/nyFqCMORipMBEI6VjvEC',
        'value': {{ checkout.subtotal_price | money_without_currency }},
        'currency': 'USD',
        'transaction_id': '{{ order_number }}'
    });

    gtag('event', 'purchase', {
      'event_category': 'checkout',
      'event_label': '{{ order_number }}',
      'event_value': {{ checkout.subtotal_price | money_without_currency }}
    });
  </script>

  <script type="text/javascript">
    fbq && fbq('track', 'Purchase');

    pintrk && pintrk('track', 'Purchase');
  </script>
{% endif %}