<!-- /snippets/onboarding-product.liquid -->

<div class="wrapper page-margin--product">
  <div class="grid">
    <div class="grid__item medium-up--one-half">
      <div class="product__slides product-single__photos">
        <div class="product__photo">
          {{ 'product-5' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      </div>
    </div>
    <div class="grid__item medium-up--one-half">
      <div class="product__title__wrapper">
        <h1 class="product__title">{{ 'homepage.onboarding.product_title' | t }}</h1>
        <div class="product__price h2--number"><span>{{ '1999' | money }}</span></div>
      </div>
      <div class="product__form">
        <button class="btn btn--form">
          <span>{{ 'products.product.add_to_cart' | t }}</span>
        </button>
      </div>
      <div class="product__description rte">
        {{ 'homepage.onboarding.no_content' | t }}
      </div>
    </div>
  </div>
</div>
