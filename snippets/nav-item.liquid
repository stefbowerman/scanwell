{%- assign parent = false -%}
{%- if link.levels == 1 -%}
  {%- assign parent = true -%}
{%- endif -%}
{%- assign grandparent = false -%}
{%- if link.levels == 2 -%}
  {%- assign grandparent = true -%}
{%- endif -%}
{%- assign child_count = 0 -%}
{%- if grandparent -%}
  {%- assign child_count = link.links.size -%}
  {%- if child_count > 10 -%}
    {%- assign child_count = 10 -%}
  {%- endif -%}
{%- endif -%}
{%- capture link_id -%}{{ link.title | handleize }}-{{ seed }}-{{ version }}{%- endcapture -%}

<li class="{% if grandparent %}grandparent kids-{{child_count}}{% elsif parent %}parent{% else %}child{%endif%} {% if link.active %}main-menu--active{% endif %}">
  <a href="{{ link.url }}" class="nav-link">
    {{ link.title | escape }}
    {% if parent or grandparent %}<span class="nav-carat-small">{% include 'icon-arrow-down-small' %}</span>{% endif %}
  </a>
  {% if parent or grandparent %}
    <a href="#" class="nav-carat ariaToggle" aria-haspopup="true" aria-controls="{{ link_id }}" aria-expanded="false">
      <span class="visually-hidden">{{ 'collections.sidebar.more' | t }}</span>
      {% include 'icon-arrow-down' %}
    </a>
    <div class="main-menu-dropdown" id="{{ link_id }}">
      <ul>
        {% for link in link.links %}
          {% include 'nav-item' %}
        {% endfor %}
      </ul>
    </div>
  {% endif %}
</li>
